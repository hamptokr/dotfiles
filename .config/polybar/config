background-alt = #444
foreground = #dfdfdf
foreground-alt = #888
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/main]
monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 2.5%
bottom = true

border-size = 0
line-size = 2
padding = 1
module-margin = 1

modules-left = date ewmh
